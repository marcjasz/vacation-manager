<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Service</th>
      <th>Service provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% vacation.invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.service %></td>
        <td><%= link_to invoice.service_provider.name, service_provider_path(invoice.service_provider) %></td>
        <td><%= link_to 'Show', invoice, class: "btn-sm btn-outline" %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn-sm btn-outline" %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>