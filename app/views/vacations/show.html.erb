<p id="notice"><%= notice %></p>

<p>
  <strong>Start date:</strong>
  <%= @vacation.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @vacation.end_date %>
</p>

<p>
  <strong>Name:</strong>
  <%= @vacation.name %>
</p>

<p>
  <strong>Organizer:</strong>
    <%= link_to @vacation.organizer&.name, @vacation.organizer %> 
</p>

<p>
  <strong>Groups:</strong>
  <% @vacation.groups.each do |group| %> 
    <%= link_to group.id, group_path(group) %> 
  <% end %>
</p>

<%= link_to 'Edit', edit_vacation_path(@vacation) %> |
