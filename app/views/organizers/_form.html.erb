<%= form_with(model: organizer, local: true) do |form| %>
  <% if organizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organizer.errors.count, "error") %> prohibited this organizer from being saved:</h2>

      <ul>
        <% organizer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :nip %>
    <%= form.text_field :nip, readonly: form.object.persisted? %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
